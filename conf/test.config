/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run phac-nml/iridanextexample -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 1
    max_memory = '1.GB'
    max_time   = '1.h'

    // Input data
    input  = 'https://raw.githubusercontent.com/phac-nml/clustersplitter/dev/tests/data/samplesheets/samplesheet.csv'

    outdir = "results"

    ar_config = "$baseDir/tests/data/configs/config.json"

    partition_column = "outbreak"
    metadata_1_header = "outbreak"
    metadata_2_header = "organism"
    metadata_3_header = "subtype"
    metadata_4_header = "country"
    metadata_5_header = "serovar"
    metadata_6_header = "age"
    metadata_7_header = "date"
    metadata_8_header = "source"
}
